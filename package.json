{
  "name": "household-planet-kenya",
  "version": "1.0.0",
  "description": "Complete e-commerce platform for household items in Kenya",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd household-planet-frontend && npm run dev",
    "dev:backend": "cd household-planet-backend && npm run start:dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd household-planet-frontend && npm run build",
    "build:backend": "cd household-planet-backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd household-planet-frontend && npm run start",
    "start:backend": "cd household-planet-backend && npm run start:prod",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd household-planet-frontend && npm test",
    "test:backend": "cd household-planet-backend && npm test",
    "verify": "cd launch-monitoring && npm run verify",
    "monitor": "cd launch-monitoring && npm run monitor",
    "launch": "cd launch-monitoring && npm run full-launch",
    "install-all": "npm install && cd household-planet-frontend && npm install && cd ../household-planet-backend && npm install && cd ../launch-monitoring && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "node-fetch": "^2.7.0"
  }
}
