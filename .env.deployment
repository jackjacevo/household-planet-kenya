# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=production

# CORS
CORS_ORIGIN="*"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# M-Pesa (placeholder values)
