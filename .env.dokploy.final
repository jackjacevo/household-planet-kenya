# Production Environment Variables for Dokploy
NODE_ENV=production
PORT=3001

# JWT Configuration
JWT_SECRET=household-planet-jwt-secret-key-2024-production-secure
JWT_EXPIRES_IN=7d

# Database Configuration (SQLite for simplicity)
DATABASE_URL=file:./dev.db

# CORS Configuration
CORS_ORIGIN=https://householdplanetkenya.co.ke
FRONTEND_URL=https://householdplanetkenya.co.ke
BASE_URL=http://backend:3001

# Session Configuration
SESSION_SECRET=household-planet-session-secret-2024

# M-Pesa Configuration (Add your actual credentials)
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_BASE_URL=https://api.safaricom.co.ke
MPESA_CALLBACK_URL=https://householdplanetkenya.co.ke/api/payments/mpesa/callback
MPESA_SHORTCODE=174379
MPESA_ENVIRONMENT=production

# Security Configuration
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=info
HTTPS_ENABLED=true
TRUST_PROXY=true
SECURE_COOKIES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTH=1000