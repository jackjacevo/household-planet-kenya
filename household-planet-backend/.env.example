# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (use Dokploy secrets)
DATABASE_URL=postgresql://username:password@postgres:5432/household_planet

# JWT Configuration (use strong random values)
JWT_SECRET=your-super-strong-jwt-secret-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://householdplanetkenya.co.ke,https://www.householdplanetkenya.co.ke

# URL Configuration
BASE_URL=http://household-planet-backend:3001
FRONTEND_URL=https://householdplanetkenya.co.ke

# Session Configuration
SESSION_SECRET=your-super-strong-session-secret-here

# M-Pesa Configuration (use Dokploy secrets)
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_BASE_URL=https://api.safaricom.co.ke
MPESA_CALLBACK_URL=https://householdplanetkenya.co.ke/api/payments/mpesa/callback

# WhatsApp Integration (use Dokploy secrets)
WHATSAPP_USER_PASSWORD=your-whatsapp-password
WHATSAPP_SYSTEM_USER=whatsapp-system
WHATSAPP_WEBHOOK_SECRET=your-whatsapp-webhook-secret

# Email Configuration (use Dokploy secrets)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-app-password