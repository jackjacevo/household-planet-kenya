# Production Environment Configuration
NODE_ENV=production
PORT=3001

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-change-this
JWT_EXPIRES_IN=7d

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@localhost:5432/household_planet_prod

# Redis Configuration (Required for production sessions)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=https://householdplanetkenya.co.ke

# Session Configuration
SESSION_SECRET=your-production-session-secret-change-this

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTH=1000

# Production Settings
HTTPS_ENABLED=true
TRUST_PROXY=true
SECURE_COOKIES=true

# Base URL Configuration
BASE_URL=https://householdplanetkenya.co.ke

# M-Pesa Configuration (Production)
MPESA_CONSUMER_KEY=your-production-consumer-key
MPESA_CONSUMER_SECRET=your-production-consumer-secret
MPESA_PASSKEY=your-production-passkey
MPESA_BASE_URL=https://api.safaricom.co.ke
APP_URL=https://householdplanetkenya.co.ke
MPESA_CALLBACK_URL=https://householdplanetkenya.co.ke/api/payments/mpesa/callback
SIMULATE_MPESA_PAYMENTS=false

# Monitoring Configuration
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=warn